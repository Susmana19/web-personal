<html>

<head>
    <title>Login | Web Personal</title>
    <link rel="shortcut icon" href="/assets/images/portfolio.png" type="image/x-icon">
    <link rel="stylesheet" href="/assets/css/login.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>
    <!-- NAVIGASI BAR START-->
    <nav>
        <div class="nav-left">
            <div class="logo">
                <a href="/">Portfolio</a>
            </div>
    
            <ul>
                <li>
                    <a class="not-active" href="/">Home</a>
                </li>
    
                <li>
                    <a class="not-active" href="/add-project">Add Project</a>
                </li>
            </ul>
        </div>
    
        <div class="nav-right">

        <a class="register" href="/register">Register</a>
        <a class="login active" href="/login">Login</a>
        <a class="contact-me" href="/contact-me">Contact Me</a>
    
        </div>
    </nav>
    <!-- NAVIGASI BAR END-->

    <!-- LOGIN FORM START-->
    <div class="project">
        <div class="project-form">
            <div class="form-container">
                <h2>LOGIN TO YOUR ACCOUNT</h2>
                    {{#if messages.success}}
                        <div class="alert alert-primary align-items-center alert-dismissible fade show" role="alert">
                            {{messages.success}}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {{/if}}
                    {{#if messages.not-login}}
                        <div class="alert alert-warning align-items-center alert-dismissible fade show" role="alert">
                            {{messages.not-login}}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {{/if}}
                    <form action="/login" method="post">
                        <div class="project-name">
                            <label for="input-email">Email</label>
                            <input type="email" id="input-email" name="inputEmail"/>
                            {{#if messages.danger}}
                                <div class="alert alert-danger align-items-center" role="alert">
                                    <div>
                                        {{messages.danger}} <a href="/register" class="alert-link">Register</a>
                                    </div>
                                </div>
                            {{/if}}
                        </div>
                        <div class="project-name">
                            <label for="input-password">Password</label>
                            <input type="password" id="input-password" name="inputPassword"/>
                        </div>
                            {{#if messages.wrongpass}}
                            <div class="alert alert-danger align-items-center" role="alert">
                                <div>
                                    {{messages.wrongpass}}
                                </div>
                            </div>
                            {{/if}}
                        <div class="button-group">
                            <button type="submit">Login</button>
                        </div>
                    </form>
            </div>
        </div>
    </div>
    <!-- LOGIN PROJECT FORM END -->

<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>
